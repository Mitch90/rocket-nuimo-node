{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "keyofStringsOnly": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "pretty": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "target": "es2017",

        "declaration": true,
        "declarationDir": "dts"
    },
    "typeAcquisition": {
        "enable": true,
        "include": [ "node", "noble", "weak" ],
    },
    "exclude":[
        "node_modules"
    ]
}